<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:updatePeriodMillis="15000"
    android:padding="@dimen/widget_margin"
    android:background="#1139373E">



    <LinearLayout
        android:id="@+id/widget_4x2_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/widget_4x2_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="false"
            android:layout_gravity="end"
            android:background="#00FFFFFF"
            android:clickable="true"
            android:contentDescription="@string/item"
            android:cropToPadding="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:scaleX=".5"
            android:scaleY=".5"
            app:srcCompat="@drawable/logo"
            tools:srcCompat="@drawable/logo">
        </ImageView>

        <TextView
            android:id="@+id/widget_4x2_body_weekday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/archistico_simple"
            android:textAlignment="center"
            android:textColor="#39373E"
            android:textSize="36sp"
            android:textStyle="bold|italic"
            tools:text="Monday"></TextView>
        <TextView
            android:id="@+id/widget_4x2_body_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/archistico_simple"
            android:textAlignment="center"
            android:textColor="#39373E"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            tools:text="Jan 1, 2019">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_4x2_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:orientation="vertical"
        android:background="#39373E">

        <TextView
            android:id="@+id/widget_4x2_footer_bizname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#39373E"
            android:fontFamily="@font/comfortaa"
            android:gravity="center|center_vertical"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            tools:text="@string/contact_phone"></TextView>
        <TextView
            android:id="@+id/widget_4x2_footer_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#39373E"
            android:fontFamily="@font/jura_regular"
            android:gravity="center|center_vertical"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            tools:text="@string/contact_phone"></TextView>

    </LinearLayout>
</RelativeLayout>