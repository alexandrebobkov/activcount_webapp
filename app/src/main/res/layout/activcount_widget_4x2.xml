<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:updatePeriodMillis="15000"
    android:padding="@dimen/widget_margin"
    android:background="#22FFFFFF">

    <LinearLayout
        android:id="@+id/widget_4x2_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/widget_4x2_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="right"
            android:background="#00FFFFFF"
            android:clickable="true"
            android:contentDescription="@string/item"
            android:cropToPadding="true"
            android:focusable="true"

            android:scaleType="fitCenter"
            android:scaleX=".5"
            android:scaleY=".5"
            app:srcCompat="@drawable/logo"
            tools:srcCompat="@drawable/logo"></ImageView>

        <TextView
            android:id="@+id/widget_4x2_body_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/jura_semibold"
            android:textAlignment="textStart"
            android:textColor="#39373E"
            android:textSize="30sp"
            tools:text="Jan 1, 2019"></TextView>

        <TextView
            android:id="@+id/widget_4x2_body_weekday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/kalam"
            android:textAlignment="center"
            android:textColor="#39373E"
            android:textSize="30sp"
            android:textStyle="italic"
            tools:text="Jan 1, 2019"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_4x2_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:orientation="vertical"
        android:background="#39373E">

        <TextView
            android:id="@+id/widget_4x2_footer_bizname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#39373E"
            android:fontFamily="@font/jura_semibold"
            android:gravity="center|center_vertical"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            tools:text="@string/contact_phone"></TextView>
        <TextView
            android:id="@+id/widget_4x2_footer_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#39373E"
            android:fontFamily="@font/jura_semibold"
            android:gravity="center|center_vertical"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            tools:text="@string/contact_phone"></TextView>

    </LinearLayout>
</RelativeLayout>