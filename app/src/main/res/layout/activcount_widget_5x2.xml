<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:updatePeriodMillis="15000"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/widget_5x2_img_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="8sp"
            android:contentDescription="@string/item" />

        <TextView
            android:id="@+id/widget5x2_txt_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/widget_5x2_logo"
            android:textAlignment="textStart"
            android:textSize="12sp" />
        <ImageView
            android:id="@+id/widget_5x2_img_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_marginTop="-4sp"
            android:layout_marginRight="8sp"
            android:contentDescription="@string/item" />
        <ImageView
            android:id="@+id/widget_5x2_img_weekday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="-4dp"
            android:layout_marginLeft="8sp"
            android:contentDescription="@string/item" />
    </LinearLayout>



    <ImageView
        android:id="@+id/widget_5x2_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"

        android:background="#00FFFFFF"
        android:clickable="true"
        android:contentDescription="@string/item"
        android:cropToPadding="true"
        android:focusable="true"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:background="#212223"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/widget5x2_img_business_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="0dp"
            android:contentDescription="@string/item" />

        <ImageView
            android:id="@+id/widget5x2_img_txt_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="6dp"
            android:contentDescription="@string/item" />
    </LinearLayout>
</RelativeLayout>